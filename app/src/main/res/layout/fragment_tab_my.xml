<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <com.happy.widget.ItemRelativeLayout
                android:id="@+id/music"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mainItem_height"
                android:layout_above="@+id/item1"
                android:layout_marginBottom="10dp"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/music_icon"
                    android:layout_width="@dimen/mainItem_Imageview_height"
                    android:layout_height="@dimen/mainItem_Imageview_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <com.happy.widget.MainTextView
                    android:id="@+id/musicText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/music_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/music_icon"
                    android:text="本地音乐" >
                </com.happy.widget.MainTextView>

                <com.happy.widget.MainTextView
                    android:id="@+id/musicCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/musicText"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/music_icon"
                    android:text="0首歌曲" >
                </com.happy.widget.MainTextView>

                <ImageView
                    android:id="@+id/randomPlay"
                    android:layout_width="@dimen/mainItem_Imageview_height"
                    android:layout_height="@dimen/mainItem_Imageview_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:clickable="true" />
            </com.happy.widget.ItemRelativeLayout>

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/secondItem_height"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <com.happy.widget.ItemRelativeLayout
                    android:id="@+id/favorite"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/favorite_icon"
                        android:layout_width="@dimen/secondItem_Imageview_height"
                        android:layout_height="@dimen/secondItem_Imageview_height"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <com.happy.widget.MainTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/favorite_icon"
                        android:text="我的最爱" >
                    </com.happy.widget.MainTextView>
                </com.happy.widget.ItemRelativeLayout>

                <com.happy.widget.ItemRelativeLayout
                    android:id="@+id/download"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/download_icon"
                        android:layout_width="@dimen/secondItem_Imageview_height"
                        android:layout_height="@dimen/secondItem_Imageview_height"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <com.happy.widget.MainTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/download_icon"
                        android:text="我的下载" >
                    </com.happy.widget.MainTextView>
                </com.happy.widget.ItemRelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/comm_shadow_top" >
        </RelativeLayout>        -->
    </RelativeLayout>

</LinearLayout>